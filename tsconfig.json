{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "baseUrl": ".",                             // <- ŠIS PIETRŪKA
    "paths": {
      "@/*": ["*"]                              // vai ["./*"] – abi ok ar baseUrl
    },
    "forceConsistentCasingInFileNames": true    // novērš Linux/Netlify reģistrjutības gļukus
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
